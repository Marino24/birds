<h1>Moje beležke</h1>

<%= form_with(model: @notepad, url: notepads_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Dodaj beležko", class: "btn btn-primary" %>
  </div>
<% end %>

<% @notepads.each do |notepad| %>
  <div class="container">
    <%= form_with(model: notepad, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :text %>
        <%= form.text_area :text, class: "form-control" %>
      </div>
      <div class="form-group d-flex justify-content-between">
        <%= form.submit "Shrani", class: "btn btn-primary" %>
        <% if notepad.persisted? %>
          <%= link_to "Izbriši", notepad_path(notepad), method: :delete, class: "btn btn-danger", data: { turbo_method: "delete", turbo_confirm: "Si prepričan?" } %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>


