<h1>Pošlji email</h1>
<br>
<div class="form">
    <%= form_with url: posta_path do |form| %>
      <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control", value: @email, readonly: true %>
  </div>

  <div class="form-group">
    <%= form.label :tema, class: "form-label" %>
    <%= form.text_field :tema, class: "form-control", placeholder: "Vnesite temo e-pošte" %>
  </div>

  <div class="form-group">
    <%= form.label :vsebina, class: "form-label" %>
    <%= form.text_area :vsebina, class: "form-control", placeholder: "Vnesite vsebino e-pošte" %>
  </div>

  <%= form.submit "Pošlji", class: "btn btn-primary" %>
    
    <% end %>
</div>
